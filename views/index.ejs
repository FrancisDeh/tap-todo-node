<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
            href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
            rel="stylesheet"
    />
    <link
            rel="stylesheet"
            href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />

    <style>
        * {
            font-family: "Poppins", sans-serif;
        }

        section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 100px 50px;
        }

        button {
            padding: 8px;
            margin-right: 30px;
            width: 150px;
            border-radius: 5px;
            cursor: pointer;
        }

        #add-task-btn {
            border: #086972 2px solid;
            color: #fff;
            font-size: 18px;
            background-color: #086972;
        }

        input[type="text"] {
            outline: none;
            border: none;
            padding: 8px;
            font-size: 18px;
            width: 400px;
            border-bottom: #086972 2px solid;
            margin-right: 20px;
        }

        #logo {
            margin-bottom: 20px;
        }

        .table-div {
            margin-top: 50px;
            width: 600px;
        }

        table {
            width: 100%;
        }

        td, th {
            border-bottom: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        .delete-btn {
            width: 80px;
            border: #f85959 1px solid;
            color: #f85959;
            background-color: #fff;
        }


        .delete-btn:hover {
            border: #fff 1px solid;
            color: #fff;
            background-color: #f85959;
        }
    </style>
</head>

<body>
<section>
    <img id="logo" src="images/logo.png" width="150" height="150" alt="Logo">
    <div>
        <form id="task-form">
            <input type="text" name="task-name" id="task-name-input" placeholder="Enter your task" required autocomplete="off" autofocus>
            <button type="submit" id="add-task-btn">
                <i class="la la-plus"></i> Add Task
            </button>
        </form>
    </div>
    <div class="table-div">
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Is Completed?</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% for (let todo of todos) { %>
            <tr>
                <td><%= todo.name %></td>
                <td><%= todo.is_completed %></td>
                <td><%= todo.createdAt %></td>
                <td>
                    <button class="delete-btn">
                        <i class="la la-trash"></i>
                    </button>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    <% if (todos.length === 0) {%>
        <img class="empty-view" src="https://img.freepik.com/free-vector/pandas-concept-illustration_114360-7484.jpg?w=740&t=st=1686770802~exp=1686771402~hmac=719874c25a90d68af3260a4d08ee9de2f01774d3b77efa7a0e043a8ed8e83514" alt="Empy Task list" title="Empty tasks">
    <% } %>
</section>
</body>
</html>